          <li class="nav-item">
            <a href="#" onclick={{action "logout"}}>Logout</a>
          </li>
        {{else}}
          <li class="nav-item">
            {{#link-to "register" class="nav-link"}}Sign-up{{/link-to}}
          </li>
          <li class="nav-item">
            {{#link-to "login" class="nav-link"}}Sign-in{{/link-to}}
